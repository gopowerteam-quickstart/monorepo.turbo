{
  "name": "monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.12.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "dev:playground": "pnpm dev --filter playground",
    "clean": "rimraf node_modules **/*/node_modules",
    "prerelease": "pnpm build",
    "release": "bumpp",
    "prepare": "husky install",
    "commit": "git-cz",
    "preinstall": "npx only-allow pnpm"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@gopowerteam/eslint-config": "^0.0.12",
    "@types/node": "18",
    "bumpp": "^9.2.0",
    "commitizen": "4.3.0",
    "cz-customizable": "7.0.0",
    "eslint": "8.51.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "pnpm": "8.9.0",
    "prettier": "latest",
    "rimraf": "5.0.5",
    "tsup": "7.2.0",
    "turbo": "latest",
    "typescript": "5.2.2"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
